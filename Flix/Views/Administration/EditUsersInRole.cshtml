@model List<Flix.Models.UserRolesView>
@{
ViewData["Title"] = "EditUsersInRole";
Layout = "~/Views/Shared/_Layout.cshtml";
    var roleId = ViewBag.roleId;
    var roleName = ViewBag.roleName;
    var state = ViewBag.label;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2 style="color:black">Add or remove users from @roleName role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" /><label asp-for="@Model[i].IsSelected" class="form-check-label" style="color:black">@Model[i].UserName</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input id="greenbutton" type="submit" value="Update" class="btn btn-primary" style="width:auto"/>
            @*<a asp-action="EditRole" asp-route-id="roleId"/>*@ | 
            <a id="redbutton" class="btn btn-primary" asp-action="Index" asp-controller="Administration">Back To Roles</a>
            <p>@state</p>
        </div>
    </div>
</form>

