@model Flix.Models.Movies

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    img {
        float: right;
        max-height: 500px;
        max-width: 337px;
        min-height: 500px;
        min-width: 337px;
    }
    h3{
        color:red;
    }
    dd{
        color:white;
    }
    dt{
        color:white;
    }
</style>



<h3>Are you sure you want to delete this?</h3>
<div>
    
    <hr />
    @{ 
        Model.Name = Model.Name.Replace("_", " ");
    }
    <img src=@Model.CoverPath alt=@Model.Name />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.videoCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.videoCategory)
        </dd>
        @*<dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VideoPath)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VideoPath)
        </dd>*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input id="redbutton" type="submit" value="Delete" class="btn btn-danger" /> |
        
        @{

            if (Model.Type == "Movie")
            { <a id="greenbutton" class="btn btn-primary" asp-controller="Movies" asp-action="Index">Back to List</a> }
            else if (Model.Type == "TV Show")
            { <a id="greenbutton" class="btn btn-primary" asp-controller="Movies" asp-action="TvIndex">Back to List</a>}
            else
            { <a id="greenbutton" class="btn btn-primary" asp-action="Index">Back to List</a>}

        }
    </form>
</div>
