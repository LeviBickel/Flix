@model Flix.Models.Movies

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    img {
        float: right;
        max-height: 500px;
        max-width: 337px;
        min-height: 500px;
        min-width: 337px;
    }

    dd {
        color: white;
    }

    dt {
        color: white;
    }
</style>
@{
    string name = Model.Name;
    name = name.Replace("_", " ");
}
<h1>Details</h1>

<div>
    @*<h4>Movies</h4>*@
    <hr />
    <img src=@Model.CoverPath alt=@Model.Name />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @name

            @*@Html.DisplayFor(model => model.Name)*@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.videoCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.videoCategory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a id="goldbutton" class="btn btn-primary" asp-action="Watch" asp-route-id="@Model.ID"><i class="fa fa-play"></i></a>
</div>
<hr/>
<div>
    @if (User.IsInRole("Administrators"))
    {
        <a id="greenbutton" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    }
    @{ 

        if (Model.Type == "Movie") { <a id="redbutton" class="btn btn-danger" asp-controller="Movies" asp-action="Index">Back to List</a> }
        else if (Model.Type == "TV Show") { <a id="redbutton" class="btn btn-danger" asp-controller="Movies" asp-action="TvIndex">Back to List</a>}
        else { <a id="redbutton" class="btn btn-danger" asp-action="Index">Back to List</a>}

        }
</div>
